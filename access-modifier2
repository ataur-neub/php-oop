<?php
    class Fruit{
          public $name;
          public $color;
          public $weight;
          
          function setName($name){//it is by default public function
            $this->name=$name;
          
          }
          protected setColor($color){//this protected function it will work it is calld from class
            $this->color=$color;
          }
          private setWeight($weight){
              $this->weight=$weight;
          
          }
    
    
    }
    
    fruitObj=new Fruit();
    fruitObj->setName("mango");//it is okay
    fruitObj->setColor("red");// it will show error
    fruitObj->setWeight(2);// it will show error too

?>
